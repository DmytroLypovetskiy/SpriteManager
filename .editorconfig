root = true

[*.js]
trim_trailing_whitespace = true
end_of_line = lf

insert_final_newline = true
indent_style=space
indent_size=2

quote_type=single

space_after_anonymous_functions=false
space_after_control_statements=true
spaces_around_operators=true

spaces_in_brackets=false


[*.{json,yml}]
indent_style = space
indent_size = 2

[node_modules/**.js]
codepaint = false

[src/js/libs/**.js]
codepaint = false